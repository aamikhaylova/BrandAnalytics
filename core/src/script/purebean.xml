<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">
<beans default-autowire="byName" default-init-method="afterPropertiesSet">
    <bean id="configProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:mysql.properties</value>
            </list>
        </property>
    </bean>
    <!--DB conf-->
    <bean id="pureDataSource" destroy-method="close" class="${dataSourceClass}" lazy-init="false">
    <!--    <property name="driverClassName" value="com.mysql.jdbc.Driver"/> -->
        <property name="url" value="${urlPure}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
        <property name="host" value="${host}"/>
        <property name="user" value="${user}"/>
        <property name="pass" value="${pass}"/>
        <property name="port" value="${port}"/>
        <property name="tunnelLocalPort" value="${tunnelLocalPort}"/>
        <property name="tunnelRemotePort" value="${tunnelRemotePort}"/>
        <property name="tunnelRemoteHost" value="${tunnelRemoteHost}"/>
        <!--<property name="validationQuery" value="select 1"/>-->
    </bean>
</beans>